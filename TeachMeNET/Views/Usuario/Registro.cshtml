@model User

@{
    ViewData["Title"] = "Registro";
}

<div class="text-center mt-5">
    <div class="container text-center">
        <div class="row mt-5">
            <div class="col">
            </div>
            <div class="col-md mt-5">
                <section>
                    <form asp-controller="Usuario" asp-action="Registro" method="post">
                        <div asp-validation-summary="All" class="text-danger">
                            @Html.ValidationSummary()
                        </div>
                        <h1>Registro</h1>
                        <hr />


                        <div class="form-group text-left">
                            <label asp-for="Name1">Nombre</label>
                            <input asp-for="Name1" class="form-control" />
                            <span asp-validation-for="Name1" class="text-danger"></span>
                        </div>
                        <div class="form-group text-left">
                            <label asp-for="LastName1">Apellido</label>
                            <input asp-for="LastName1" class="form-control" />
                            <span asp-validation-for="LastName1" class="text-danger"></span>
                        </div>

                        <div class="form-group text-left">
                            <label asp-for="Input.Email">Correo</label>
                            <input asp-for="Input.Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <div class="form-group text-left">
                            <label asp-for="UserName">Usuario</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group text-left">
                        <label asp-for="Input.Password">Clave</label>
                        <input asp-for="Input.Password" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                        <button type="submit" class="bttn">Registrarme</button>
                        
                    </form>
                </section>
            </div>
            <div class="col">
            </div>
        </div>
        </div>
</div>
